[
  {
    "name": "Dump my db",
    "kind": "mysql",
    "context": {
      "host": "localhost",
      "port": 3306,
      "user": "MY_APP_USER",
      "pass": "MY_APP_PASS",
      "dbname": "MY_DB",
      "outputPath": "dumps",
      "mysqldumpBin": "mysqldump",
      "ignoreTables": [
        "big_table"
      ]
    },
    "period": "@daily,0 30 * * * *,@hourly,@every 1h30m,@yearly,@monthly,@weekly"
  },
  {
    "name": "Dump my file",
    "kind": "tar",
    "context": {
      "paths": [
        "folder1",
        "folder2"
      ],
      "outputPath": "dumps",
      "gzipBin": "mysqldump"
    },
    "period": "@daily,0 30 * * * *,@hourly,@every 1h30m,@yearly,@monthly,@weekly"
  }
]
